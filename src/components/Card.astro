---
import { Image } from 'astro:assets';

type Project = {
  title: string;
  type: string;
  description: string;
  year: string;
  image: ImageMetadata;
  alt: string;
  eager?: boolean;
};

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="flex flex-col overflow-hidden rounded-lg shadow-lg shadow-cyan-500/50">
  <div class="flex-shrink-0">
    <div class="mb-1 flex lg:!h-56">
      <Image
        class="w-full object-cover"
        src={project.image}
        alt={project.alt}
        loading={project.eager ? 'eager' : undefined}
      />
    </div>
  </div>
  <div class="flex flex-1 flex-col justify-between bg-gray-100 p-6">
    <div class="flex-1">
      <p class="text-sm font-medium text-teal-600">{project.type}</p>
      <div class="mt-2 block">
        <p class="text-xl font-semibold text-gray-900">{project.title}</p>
        <p class="mt-3 text-sm text-gray-500" set:html={project.description} />
      </div>
    </div>
    <div class="mt-6 flex items-center">
      <div class="ml-3">
        <div class="flex space-x-1 text-sm text-gray-500">{project.year}</div>
      </div>
    </div>
  </div>
</div>
<style></style>
